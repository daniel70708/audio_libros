<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AudioLibros" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/negroPrimario</item>
        <item name="colorPrimaryDark">@color/verdeOscuroSecundario</item>
        <item name="colorAccent">@color/verdeSecundario</item>
        <!-- Customize your theme here. -->
    </style>
    
    <!--Estilo para el splash screen-->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!--Color de fondo del splash-->
        <item name="windowSplashScreenBackground">@color/negroPrimario</item>
        <!--Icono del splash-->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_goosebumps</item>
        <!--Tema que se ejecutará después del splash-->
        <item name="postSplashScreenTheme">@style/Theme.AudioLibros</item>
    </style>

    <!--Estilo para el item_libro-->
    <style name="texto_item">
        <item name="android:textColor">@color/blancoTexto</item>
        <item name="android:textSize">10dp</item>
    </style>

</resources>