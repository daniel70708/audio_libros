<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AudioLibros" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/negroPrimario</item>
        <item name="colorPrimaryDark">@color/verdeOscuroSecundario</item>
        <item name="colorAccent">@color/verdeSecundario</item>
        <!-- Customize your theme here. -->
    </style>
    
    <!--Estilo para el splash screen-->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!--Color de fondo del splash-->
        <item name="windowSplashScreenBackground">@color/negroPrimario</item>
        <!--Icono del splash-->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_goosebumps</item>
        <!--Tema que se ejecutará después del splash-->
        <item name="postSplashScreenTheme">@style/Theme.AudioLibros</item>
    </style>

    <!--Estilo para el título en item_libro-->
    <style name="texto_item">
        <item name="fontFamily">@font/patrickhand</item>
        <item name="android:textColor">@color/blancoTexto</item>
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">2</item>
        <item name="android:text">@string/titulo_item</item>
    </style>

    <!-- Estilo base del texto en fragment detalle libro -->
    <style name="texto_base">
        <item name="fontFamily">@font/patrickhand</item>
        <item name="android:textColor">@color/blancoTexto</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="texto_tiempoRestante" parent="texto_base">
        <item name="android:textSize">16dp</item>
        <item name="android:lines">1</item>
    </style>

    <style name="texto_tituloLibro" parent="texto_base">
        <item name="android:textSize">20dp</item>
        <item name="android:lines">1</item>
    </style>

    <style name="texto_autorLibro" parent="texto_base">
        <item name="android:textSize">18dp</item>
        <item name="android:lines">1</item>
    </style>

</resources>